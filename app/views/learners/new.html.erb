<h1>Sign Up</h1>

<%=form_for :learner do |f| %>
<P><%= f.text_field :first_name, :placeholder => "First Name" %>
<P><%= f.text_field :last_name, :placeholder => "Last Name" %>
<P><%= f.text_field :email, :placeholder => "E-mail" %>
<P><%= f.password_field :password, :placeholder => "Password" %>
<P><%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %>
<P><%= f.submit "Sign Up" %>


<% end %>
