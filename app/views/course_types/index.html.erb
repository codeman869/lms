<h1>Course Types</h1>

<table class="table-striped table-hover">
    <tr class="text-center" style="font-weight:bold">
            <td>Name</td>
            <td>Description</td>
            <td>Start Date</td>
            <td>End Date</td>
            
    </tr>
    
    <% @courseTypes.each do |courseType| %>
        <tr>
            <td class="col-xs-3"><%=courseType.name %></td>
            <td class="col-xs-3"><%=courseType.description %></td>
            <td class="col-xs-3"><%=courseType.start.to_s(:courseDate)%></td>
            <td class="col-xs-3"><%=courseType.end.to_s(:courseDate) %></td>
            
        </tr>
    <% end %>
</table>

